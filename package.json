{
  "name": "shop-search",
  "version": "3.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "semantic-release": "semantic-release",
    "format": "biome format --write --no-errors-on-unmatched",
    "lint": "tsc --noEmit -p tsconfig.json && biome lint --diagnostic-level=error --no-errors-on-unmatched .",
    "lint:fix": "biome check --write --unsafe .",
    "lint:staged": "lint-staged",
    "prepare": "husky"
  },
  "keywords": [
    "shopify",
    "ecommerce",
    "product-data",
    "store-scraping",
    "typescript",
    "nodejs",
    "product-catalog",
    "shop-search",
    "shopify-api",
    "product-scraper",
    "ecommerce-tools"
  ],
  "author": "tvayam.tech <<peppyhop@gmail.com>>",
  "license": "MIT",
  "description": "A powerful, type-safe TypeScript library for fetching and transforming product data from Shopify stores. Perfect for building e-commerce applications, product catalogs, price comparison tools, and automated store analysis.",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/turndown": "^5.0.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "semantic-release": "^25.0.1 ",
    "ts-jest": "^29.3.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "remeda": "^2.21.5",
    "tldts": "^7.0.7",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "lint-staged": {
    "src/**/!(*.test|*.spec).{ts,tsx,js,jsx}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "**/*.{cjs,mjs,json,jsonc,d.cts,d.mts}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "src/**/*.{test,spec}.{ts,tsx,js,jsx}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
